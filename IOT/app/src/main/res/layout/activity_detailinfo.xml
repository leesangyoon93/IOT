<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/car1"
            android:layout_gravity="top"
            android:src="@drawable/car"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginRight="30dp"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/car2"
            android:src="@drawable/car"
            android:layout_below="@+id/car1"
            android:layout_alignLeft="@+id/car1"
            android:layout_alignStart="@+id/car1"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/car3"
            android:layout_gravity="top"
            android:src="@drawable/car"

            android:layout_below="@+id/car2"
            android:layout_alignLeft="@+id/car2"
            android:layout_alignStart="@+id/car2"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/car4"
            android:layout_gravity="top"
            android:src="@drawable/car"
            android:layout_below="@+id/car3"
            android:layout_alignLeft="@+id/car3"
            android:layout_alignStart="@+id/car3"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/arrow4"
            android:src="@drawable/arrow4"
            android:layout_alignTop="@+id/car4"
            android:layout_toLeftOf="@+id/car4"
            android:layout_toStartOf="@+id/car1"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:id="@+id/arrow3"
            android:src="@drawable/arrow3"
            android:layout_alignTop="@+id/car3"
            android:layout_toLeftOf="@+id/car3"
            android:layout_toStartOf="@+id/car1"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="430dp"
            android:id="@+id/arrow2"
            android:src="@drawable/arrow2"
            android:layout_alignTop="@+id/car2"
            android:layout_toLeftOf="@+id/car2"
            android:layout_toStartOf="@+id/car1"
            android:layout_marginTop="25dp"
            android:layout_marginRight="-10dp"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="550dp"
            android:id="@+id/arrow1"
            android:src="@drawable/arrow1"
            android:layout_alignTop="@+id/car1"
            android:layout_toLeftOf="@+id/car1"
            android:layout_toStartOf="@+id/car1"
            android:layout_marginTop="25dp"
            android:layout_marginRight="-35dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/full"
            android:src="@drawable/full"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</RelativeLayout>